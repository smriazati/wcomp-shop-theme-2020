{% capture image_layout %}
<div class="image-wrapper">
  {% if section.settings.image != blank %}
    {% include 'image-feature-row', image: section.settings.image, height: 545, id: section.id %}
  {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  {% endif %}
</div>
{% endcapture %}

<div class="feature-row co-section-1">
    {{ image_layout }}

    <div class="text-wrapper">
      {% if section.settings.text != blank %}
        <h1>
          {{ section.settings.text }} 
          {% if section.settings.text_animated_1 != blank or
            section.settings.text_animated_2 != blank or 
            section.settings.text_animated_3 != blank %}
            <span id="anim-text-swap" class="anim-text-swap">
              {% if section.settings.text_animated_1 != blank %}<span>{{ section.settings.text_animated_1 }}</span>{% endif %}
              {% if section.settings.text_animated_2 != blank %}<span>{{ section.settings.text_animated_2 }}</span>{% endif %}
              {% if section.settings.text_animated_3 != blank %}<span>{{ section.settings.text_animated_3 }}</span>{% endif %}
            </span>
          {% endif %}
        </h1>
      {% endif %}

    </div>
</div>



{% schema %}
{
  "name": "Banner",
  "class": "corporate-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
     "type": "text",
     "id": "text_animated_1",
     "label": "Animated Text - Phrase 1"
    },
    {
     "type": "text",
     "id": "text_animated_2",
     "label": "Animated Text - Phrase 2"
    },
    {
     "type": "text",
     "id": "text_animated_3",
     "label": "Animated Text - Phrase 3"
    }
  ]
}
{% endschema %}
