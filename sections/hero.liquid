     {
        "type":"select",
        "id":"hero_layout",
        "label":"Layout",
        "default":"full_width",
        "options":[
           {
              "label":"Full Width",
              "value":"full_width"
           },
           {
              "label":"Fixed width",
              "value":"fixed_width"
           }
        ]
     },
     {
        "type":"select",
        "id":"hero_size",
        "label":"Section Height",
        "default":"medium",
        "options":[
