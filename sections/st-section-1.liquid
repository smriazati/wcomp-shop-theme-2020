{% capture image_layout %}
<div class="image-wrapper">
  {% if section.settings.image != blank %}
    {% if section.settings.image != blank and section.settings.image_hover_swap != blank %}
      <div class="image-hover-swap">
        {% include 'image-feature-row', image: section.settings.image, height: 545, id: section.id %}
        <div class="image-hover-swap-img-wrapper">
          {% include 'image-feature-row', image: section.settings.image_hover_swap, height: 545, id: 'image-hover-swap-logo-img' %}
        </div>
      </div>
    {% else %}
      {% include 'image-feature-row', image: section.settings.image, height: 545, id: section.id %}
    {% endif %}
  {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  {% endif %}
</div>
{% endcapture %}

<div class="feature-row st-section-1">

    {{ image_layout }}

    <div class="text-wrapper">
      {% if section.settings.title != blank %}
        <div class="title">{{ section.settings.title }}</div>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="text">{{ section.settings.text }}</div>
      {% endif %}
    </div>

</div>


{% schema %}
{
  "name": "Banner",
  "class": "story-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type":"image_picker",
      "id":"image_hover_swap",
      "label":"Image Hover Swap"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ]
}
{% endschema %}
