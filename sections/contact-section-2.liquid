<div class="page-width contact-custom-page">
  
  {% if section.settings.newsletter_description != blank %}
      <div class="rte">{{ section.settings.newsletter_description }}</div>
  {% endif %}
  {% include 'newsletter' %}


  {% if section.settings.social_description != blank %}
      <div class="rte">{{ section.settings.social_description }}</div>
  {% endif %}
    {%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}
    <ul class="social-icons">
    {%- for social in socials -%}
        {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
        {%- if settings[social_link] != blank -%}
        <li class="social-icons__item">
            <a class="social-icons__link" href="{{ settings[social_link] | escape }}" aria-describedby="a11y-external-message" target="_blank">
            {{ social }}
            </a>
        </li>
        {%- endif -%}
    {%- endfor -%}
    </ul>


  {% if section.settings.social_description != blank %}
      <div class="rte">{{ section.settings.location_description }}</div>
  {% endif %}


  <div class="instagram">
      <h1>Instagram embed here</h1>
  </div>

</div>



{% schema %}
{
  "name": "Contact Page",
  "settings": [
    {
      "type": "richtext",
      "id": "newsletter_description",
      "label": "Newsletter Description"
    },
    {
      "type": "richtext",
      "id": "social_description",
      "label": "Social Description"
    },
    {
      "type": "richtext",
      "id": "location_description",
      "label": "Location Description"
    }
  ]
}
{% endschema %}
